{
	"name": "api",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"dev": "nest start --watch",
		"build": "nest build",
		"start": "nest start",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"migration:generate": "ts-node --transpile-only -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d ./data-source.ts",
		"migration:run": "node ./dist/scripts/migrations.js run",
		"migration:revert": "node ./dist/scripts/migrations.js revert",
		"migration:run:dev": "ts-node -r tsconfig-paths/register ./scripts/migrations.ts run",
		"migration:revert:dev": "ts-node -r tsconfig-paths/register ./scripts/migrations.ts revert",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
		"lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"db:reset": "ts-node scripts/reset-database.ts"
	},
	"dependencies": {
		"@nestjs/common": "^11.0.0",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.0.0",
		"@nestjs/jwt": "^11.0.1",
		"@nestjs/passport": "^11.0.5",
		"@nestjs/platform-express": "^11.0.0",
		"@nestjs/typeorm": "^11.0.0",
		"@repo/api": "workspace:*",
		"@types/multer": "^2.0.0",
		"@willsoto/nestjs-prometheus": "^6.0.2",
		"bcrypt": "^6.0.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"dotenv": "^17.2.3",
		"multer": "^2.0.2",
		"mssql": "^10.0.2",
		"nestjs-pino": "^4.4.1",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"pino": "^9.14.0",
		"pino-pretty": "^13.1.2",
		"prom-client": "^15.1.3",
		"reflect-metadata": "^0.2.0",
		"rxjs": "^7.8.1",
		"typeorm": "^0.3.27"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@jest/globals": "^29.7.0",
		"@nestjs/cli": "^11.0.0",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.0.0",
		"@repo/eslint-config": "workspace:*",

		"@repo/jest-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@types/bcrypt": "^6.0.0",
		"@types/express": "^4.17.17",
		"@types/node": "^22.10.7",
		"@types/passport-jwt": "^4.0.1",
		"@types/passport-local": "^1.0.38",
		"@types/supertest": "^6.0.0",
		"jest": "^29.7.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "5.5.4"
	}
}
